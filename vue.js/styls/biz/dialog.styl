
$btnBg = #7abc9d
$btnHoverBg = darken($btnBg, 10%)

.sp-modal
  .modal-content
    color: #fff
    background: #8ecdb0
    -webkit-box-shadow: none
    box-shadow: none
  .modal-header
  .modal-footer
    border: none
  .input-group-addon
    border: none
    background: #70ae91
    color: #fff
  input
  textarea
  select
    background: #7abc9d
    border: none
    -webkit-box-shadow: none
    box-shadow: none
    color: #fff
  select
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
    border-top-right-radius: 4px
    border-bottom-right-radius: 4px
  .btn
    background: $btnBg
    &:hover
      background: $btnHoverBg
      color: #fff
  .file-convert-text
    position: relative
    span
      display: block
      height: 35px
      line-height: 35px
      text-align: center
      background: #7abc9d
      border-top-right-radius: 4px
      border-bottom-right-radius: 4px
    input
      opacity: 0
      position: absolute
      top: 0
      left: 0
      bottom: 0

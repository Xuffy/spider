.sp-editor
  margin-bottom: 50px
  .btn
    width: 135px
    height: 45px
    background: #80b89e
    float: right
    color: #fff
    font-size: 16px
    margin: 20px 0
  .btn:hover
    background: darken(#80b89e, 20%)
  .btn-upload
    margin-right: 30px
    background: #6671b8
  .btn-upload:hover
    background: darken(#6671b8, 20%)


//====================  重置编辑器样式  ====================//

.editor-toolbar
  background: #fff!important
  opacity: 1
  border-color: #ddd
  &:hover
    opacity: 1

.editor-preview, .editor-preview-side
  background: #fff

.editor-preview pre, .editor-preview-side pre
  background: none

.editor-toolbar.fullscreen
  height: 60px
  border-radius: 0
  &::after
  &::before
    background: none
